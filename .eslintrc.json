{
    "env": {
        "browser": true,
        "commonjs": true,
        "es6": true,
        "node": true
    },
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "sourceType": "module"
    },
    "extends": "eslint-config-airbnb-es5",
    "rules": {
        "indent": ["error", "tab"],
        "func-names": "off",
        "space-before-function-paren": "off",
        "spaced-comment": "off",
        "no-const-assign": "warn",
        "no-this-before-super": "warn",
        "no-undef": "warn",
        "no-unreachable": "warn",
        "no-unused-vars": ["warn", { "varsIgnorePattern": "$" }],
        "constructor-super": "warn",
        "valid-typeof": "warn"
    }
}